<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1e2639"
    android:orientation="vertical"
    tools:showIn="@layout/update_profile_app_bar"
    android:theme="@style/AppThemeLogin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#455A64"
        >





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <android.support.v7.widget.AppCompatEditText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/username_icon_white"
                android:drawablePadding="20dp"
                android:textColor="#FFF"
                android:textCursorDrawable="@null"
                android:hint="@string/firstName"
                android:textColorHint="#90A4AE"
                android:backgroundTint="#FFF"
                android:scrollHorizontally="true"
                android:maxLines="1"
                android:inputType="text"
                android:id="@+id/update_firstname"
                />

            <android.support.v7.widget.AppCompatEditText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="20dp"
                android:textColor="#FFF"
                android:textCursorDrawable="@null"
                android:hint="@string/lastName"
                android:textColorHint="#90A4AE"
                android:backgroundTint="#FFF"
                android:scrollHorizontally="true"
                android:maxLines="1"
                android:id="@+id/update_lastname"
                android:inputType="text"
                android:drawableStart="@drawable/username_icon_white"
                />





        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <android.support.v7.widget.AppCompatEditText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_mail_outline_white_24dp"
                android:drawablePadding="20dp"
                android:textColor="#FFF"
                android:textCursorDrawable="@null"
                android:hint="@string/email"
                android:id="@+id/update_email"
                android:inputType="textEmailAddress"
                android:textColorHint="#90A4AE"
                android:backgroundTint="#FFF"
                android:scrollHorizontally="true"
                android:maxLines="1"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_perm_identity_white_24dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/update_gender"
                >

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/male"
                    android:textColor="#FFF"
                    android:layout_weight="1"
                    android:fontFamily="@font/gotham"
                    android:buttonTint="#d67915"
                    android:id="@+id/update_male"
                    />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/female"
                    android:textColor="#FFF"
                    android:layout_weight="1"
                    android:fontFamily="@font/gotham"
                    android:buttonTint="#d67915"
                    android:id="@+id/update_female"
                    />


            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"

                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_place_white_24dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="10dp"
                    />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown"
                    android:id="@+id/update_spinner_country"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:backgroundTint="@color/company3"
                    >

                </android.support.v7.widget.AppCompatSpinner>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_home_white_24dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="10dp"
                    />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown"
                    android:id="@+id/update_spinner_city"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:backgroundTint="@color/company3"
                    >

                </android.support.v7.widget.AppCompatSpinner>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_language_white_24dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:spinnerMode="dropdown"
                android:id="@+id/update_spinner_language"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:backgroundTint="@color/company3"
                >

            </android.support.v7.widget.AppCompatSpinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:id="@+id/interest_layout"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_favorite_border_white_24dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                />


            <com.thomashaertel.widget.MultiSpinner
                android:id="@+id/update_spinnerMulti_interest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textColorHint="#FFF"
                android:hint="@string/chooseYourInterest"
                android:backgroundTint="@color/company3"
                android:background="@drawable/spinner_background_holo_dark"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <android.support.v7.widget.AppCompatEditText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_phone_white_24dp"
                android:drawablePadding="20dp"
                android:textColor="#FFF"
                android:textCursorDrawable="@null"
                android:hint="@string/mobile"
                android:id="@+id/update_personalmobile"
                android:textColorHint="#90A4AE"
                android:inputType="number"
                android:backgroundTint="#FFF"
                android:scrollHorizontally="true"
                android:maxLines="1"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <Button
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/update"
                android:textColor="#FFF"
                android:fontFamily="@font/gotham"
                android:id="@+id/Bt_update"
                android:onClick="Update"
                android:background="@drawable/moredetails_effect"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            >
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            >
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            >
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            >
        </LinearLayout>
    </LinearLayout>


</LinearLayout>