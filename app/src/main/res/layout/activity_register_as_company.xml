<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppThemeLogin"
    android:background="@drawable/login_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/companyregister_app_bar_navigation_menu"
    tools:context="com.speedrocket.progmine.speedrocket.View.Activites.RegisterAsCompany"
    android:orientation="vertical">
    <ScrollView android:id="@+id/ScrollView01"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:fillViewport="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.05"
            ></LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <android.support.v7.widget.AppCompatEditText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_store_white_24dp"
                android:drawablePadding="20dp"
                android:textColor="#FFF"
                android:textCursorDrawable="@null"
                android:hint="Company Name"
                android:textColorHint="#90A4AE"
                android:backgroundTint="#FFF"
                android:scrollHorizontally="true"
                android:maxLines="1"
                android:id="@+id/ed_companuname"
                android:inputType="text"
                />





        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <android.support.v7.widget.AppCompatEditText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_home_white_24dp"
                android:drawablePadding="20dp"
                android:textColor="#FFF"
                android:textCursorDrawable="@null"
                android:hint="Address"
                android:textColorHint="#90A4AE"
                android:backgroundTint="#FFF"
                android:scrollHorizontally="true"
                android:maxLines="1"
                android:inputType="text"
                android:id="@+id/ed_companycity"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <android.support.v7.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_phone_white_24dp"
                android:drawablePadding="25dp"
                android:textColor="#FFF"
                android:textCursorDrawable="@null"
                android:hint="Company Phone"
                android:textColorHint="#90A4AE"
                android:backgroundTint="#FFF"
                android:inputType="number"
                android:scrollHorizontally="true"
                android:maxLines="1"
                android:id="@+id/ed_companymobile"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <android.support.v7.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_account_balance_wallet_white_24dp"
                android:drawablePadding="25dp"
                android:textColor="#FFF"
                android:textCursorDrawable="@null"
                android:hint="Bank Account"
                android:textColorHint="#90A4AE"
                android:backgroundTint="#FFF"
                android:scrollHorizontally="true"
                android:maxLines="1"
                android:inputType="text"
                android:id="@+id/ed_compnaybankaccount"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_place_white_24dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:id="@+id/spinner_country"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                >

            </android.support.v7.widget.AppCompatSpinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <android.support.v7.widget.AppCompatEditText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_account_balance_white_24dp"
                android:drawablePadding="20dp"
                android:textColor="#FFF"
                android:textCursorDrawable="@null"
                android:hint="Bank Address"
                android:textColorHint="#90A4AE"
                android:backgroundTint="#FFF"
                android:scrollHorizontally="true"
                android:maxLines="1"
                android:inputType="text"
                android:id="@+id/ed_companybankaddress"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <android.support.v7.widget.AppCompatEditText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_payment_white_24dp"
                android:drawablePadding="20dp"
                android:textColor="#FFF"
                android:textCursorDrawable="@null"
                android:hint="Swift"
                android:textColorHint="#90A4AE"
                android:backgroundTint="#FFF"
                android:scrollHorizontally="true"
                android:maxLines="1"
                android:inputType="text"
                android:id="@+id/ed_companyswift"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <Button
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:text="Register"
                android:textColor="#FFF"
                android:fontFamily="@font/gotham"
                android:id="@+id/Bt_registerCompany"
                android:onClick="bt_RegisterCompany"
                android:background="@drawable/moredetails_effect"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.05"
            ></LinearLayout>


    </LinearLayout>
    </ScrollView>
</LinearLayout>
