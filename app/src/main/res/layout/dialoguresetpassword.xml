<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1e2639"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="@string/offer"
        android:textColor="#FFF"
        android:textSize="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#E65100"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFF"
            android:layout_marginBottom="5dp"
            />


        <android.support.v7.widget.AppCompatEditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/rocket_icon"
            android:drawablePadding="20dp"
            android:textColor="#FFF"
            android:textCursorDrawable="@null"
            android:hint="20"
            android:id="@+id/ed_amountOfCoins"
            android:inputType="number"
            android:textColorHint="#90A4AE"
            android:backgroundTint="#FFF"
            android:scrollHorizontally="true"
            android:maxLines="1"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >
        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:text="@string/send"
            android:onClick="sendOfferHimDialogue"
            android:id="@+id/sendofferhim"
            android:background="@drawable/moredetails_effect"
            />

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:text="@string/cancel"
            android:onClick="cancelOfferHimDialogue"
            android:id="@+id/cancelofferhim"
            android:background="@drawable/moredetails_effect"
            />
    </LinearLayout>
</LinearLayout>