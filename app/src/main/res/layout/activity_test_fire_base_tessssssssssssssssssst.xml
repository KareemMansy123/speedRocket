<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestFireBaseTessssssssssssssssssst"
    android:orientation="vertical"
    android:layout_marginTop="70dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="@color/white">

        <ImageView
            android:id="@+id/profileUserImage"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:src="@drawable/username"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_weight="0.17" />

        <TextView
            android:id="@+id/profileUserName"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#080808"
            android:textStyle="bold"
            android:text="Display Name" />

        <TextView
            android:id="@+id/profileUserStatus"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="Your current Status"
            android:textStyle="italic"
            android:textColor="#0f0f0f"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/profileUserFriends"
            android:layout_width="match_parent"
            android:layout_marginTop="90dp"
            android:layout_height="25dp"
            android:textSize="17dp"
            android:gravity="center"
            android:textColor="#0a0a0a"
            android:text="Total Friends" />

        <Button
            android:id="@+id/profileSendReqButton"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/holo_red_dark"
            android:text="Send Friend Request"
            android:layout_marginTop="10dp"
            android:textColor="#f9f6f6" />
        <Button
            android:id="@+id/profileDeclineReqButton"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/holo_red_dark"
            android:text="Decline Friend Request"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF" />

    </LinearLayout>



</RelativeLayout>