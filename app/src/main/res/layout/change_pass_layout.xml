<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activites.ChangePassword"

    >



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:text="@string/changePassword"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/old_pass"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="#ece6e6"
                android:backgroundTint="#ece6e6"
                android:padding="5dp"
                android:clickable="true"
                android:hint="@string/old_password"
                android:textSize="15sp"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:scrollHorizontally="true"
                android:textColor="#000"
                android:textColorHint="#868585"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/new_pass"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="#ece6e6"
                android:backgroundTint="#ece6e6"
                android:clickable="true"
                android:hint="@string/new_password"
                android:padding="5dp"
                android:inputType="textPassword"
                android:textSize="15sp"
                android:maxLines="1"

                android:paddingStart="20dp"
                android:scrollHorizontally="true"
                android:textColor="#000"
                android:textColorHint="#868585"

                android:layout_marginBottom="16dp"
                />



            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/confirm_pass"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="#ece6e6"
                android:backgroundTint="#ece6e6"
                android:clickable="true"
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                android:textSize="15sp"
                android:maxLines="1"
                android:padding="5dp"
                android:paddingStart="20dp"
                android:scrollHorizontally="true"
                android:textColor="#000"
                android:textColorHint="#868585"
                android:layout_marginBottom="16dp"/>
            <Button

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/addcompany_effeect"
                android:gravity="center"
                android:onClick="supmite"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/supmit"
                android:textColor="#FFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                />

        </LinearLayout>





    </android.support.v7.widget.CardView>

</LinearLayout>