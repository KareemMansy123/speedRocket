        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:orientation="vertical"
        >
            <android.support.v7.widget.AppCompatEditText
                  
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_phone_white_24dp"
                android:drawablePadding="20dp"
                android:textColor="#FFF"
                android:textCursorDrawable="@null"
                android:hint="@string/mobile"
                android:id="@+id/reg_personalmobile"
                android:textColorHint="#90A4AE"
                android:inputType="number"

                android:backgroundTint="#FFF"
                android:scrollHorizontally="true"
                android:maxLines="1"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                   android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#fff"
                    />

                <TextView
                    android:id="@+id/policyTerms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:inputType="textUri"
                    android:gravity="center_horizontal"
                    android:text="@string/accept_terms_and_data_police"
                    android:textColor="#fff" />

            </LinearLayout>


        </LinearLayout>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          
            android:gravity="center"
        >
            <Button
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:text="@string/register"
                android:textColor="#FFF"
                android:fontFamily="@font/gotham"
                android:id="@+id/Bt_register"
                android:onClick="bt_Register"
               android:layout_margin="10dp"
                android:background="@drawable/moredetails_effect"
                />
        </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.05"
        ></LinearLayout>


    </LinearLayout>
</ScrollView>

</LinearLayout>
