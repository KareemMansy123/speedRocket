<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/AppThemeLogin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/personalregister_app_bar_navigation_menu"
    android:background="@drawable/login_background"
    tools:context="com.speedrocket.progmine.speedrocket.View.Activites.Registration">
    <ScrollView android:id="@+id/ScrollView01"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:fillViewport="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.05"
            ></LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
              
            android:orientation="horizontal"
            >

            <android.support.v7.widget.AppCompatEditText
                  
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/username_icon_white"
                android:drawablePadding="20dp"
                android:textColor="#FFF"
                android:textCursorDrawable="@null"
                android:hint="@string/firstName"
                android:textColorHint="#90A4AE"
                android:backgroundTint="#FFF"
                android:scrollHorizontally="true"
                android:maxLines="1"
                android:layout_weight="1"
                android:inputType="text"
                android:id="@+id/reg_firstname"
                />

            <android.support.v7.widget.AppCompatEditText
                  
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="20dp"
                android:textColor="#FFF"
                android:textCursorDrawable="@null"
                android:hint="@string/lastName"
                android:textColorHint="#90A4AE"
                android:backgroundTint="#FFF"
                android:scrollHorizontally="true"
                android:maxLines="1"
                android:layout_weight="1"
                android:id="@+id/reg_lastname"
                android:inputType="text"
                android:drawableStart="@drawable/username_icon_white"
                />





        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          
        >

            <android.support.v7.widget.AppCompatEditText
                  
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_mail_outline_white_24dp"
                android:drawablePadding="20dp"
                android:textColor="#FFF"
                android:textCursorDrawable="@null"
                android:hint="@string/email"
                android:id="@+id/reg_email"
                android:inputType="textEmailAddress"
                android:textColorHint="#90A4AE"
                android:backgroundTint="#FFF"
                android:scrollHorizontally="true"
                android:maxLines="1"
                />

        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:orientation="horizontal"
        >
            <android.support.v7.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/lock_icon_white"
                android:drawablePadding="25dp"
                android:textColor="#FFF"
                android:layout_weight="1"
                android:textCursorDrawable="@null"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textColorHint="#90A4AE"
                android:id="@+id/reg_password"
                android:backgroundTint="#FFF"
                android:scrollHorizontally="true"
                android:maxLines="1"
                  
                />
            <android.support.v7.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/lock_icon_white"
                android:drawablePadding="25dp"
                android:textColor="#FFF"
                android:textCursorDrawable="@null"
                android:hint="@string/confirm"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:textColorHint="#90A4AE"
                android:id="@+id/reg_confirmpassword"
                android:backgroundTint="#FFF"
                android:scrollHorizontally="true"
                android:maxLines="1"
                />
        </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          
        >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_perm_identity_white_24dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/reg_gender"
                >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/male"
                    android:textColor="#FFF"
                      
                    android:fontFamily="@font/gotham"
                    android:buttonTint="#d67915"
                    android:id="@+id/rd_male"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/female"
                    android:textColor="#FFF"
                      
                    android:fontFamily="@font/gotham"
                    android:buttonTint="#d67915"
                    android:id="@+id/rd_female"
                    />


            </RadioGroup>
        </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:orientation="horizontal"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                  android:layout_weight="1"
                android:gravity="center_vertical"

                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_place_white_24dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="10dp"
                    />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:id="@+id/spinner_country"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:backgroundTint="@color/company3"
                    >

                </android.support.v7.widget.AppCompatSpinner>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                  android:layout_weight="1"
                android:gravity="center_vertical"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_home_white_24dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="10dp"
                    />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:id="@+id/spinner_city"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:backgroundTint="@color/company3"
                    >

                </android.support.v7.widget.AppCompatSpinner>

            </LinearLayout>

</LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          
            android:gravity="center_vertical"
        >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_language_white_24dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:id="@+id/spinner_language"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:backgroundTint="@color/company3"
                >

            </android.support.v7.widget.AppCompatSpinner>
        </LinearLayout>
